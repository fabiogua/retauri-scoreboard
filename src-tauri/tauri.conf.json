{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "retauri-scoreboard",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "window": {
        "all": true
      }
      
    },
    "windows": [
      {
        "label": "main",
        "title": "Einstellungen",
        "resizable": true,
        "height": 700,
        "url": "index.html/#/settings"
      },
      {
        "label": "scoreboard",
        "title": "Scoreboard",
        "width": 1400,
        "resizable": true,
        "url": "index.html/#/scoreboard",
        "x": 1920,
        "y": 0
      },
      {
        "label": "controlboard",
        "title": "Controlpanel",
        "width": 1400,
        "resizable": true,
        "url": "index.html/#/controlboard"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "windows": {
        "webviewInstallMode": {
          "type": "offlineInstaller"
        }
      },
      "active": true,
      "targets": "all",
      "identifier": "com.guarino.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
